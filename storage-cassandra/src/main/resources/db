create keyspace Bam;
use Bam;
create column family EventChannel with default_validation_class=CounterColumnType and comparator = UTF8Type and replicate_on_write=true;

create column family LogEvent with comparator = UTF8Type;

create column family RequestEvent with comparator = UTF8Type;
create column family RequestEventCategory with default_validation_class=CounterColumnType and comparator = UTF8Type and replicate_on_write=true;
create column family RequestEventTimeline with comparator = UUIDType;
create column family RequestEventState with comparator = UUIDType;
create column family RequestEventCount with default_validation_class=CounterColumnType and comparator = LongType and replicate_on_write=true;

create column family SimpleProcessEvent with comparator = UTF8Type;
create column family SimpleProcessEventCategory with default_validation_class=CounterColumnType and comparator = UTF8Type and replicate_on_write=true;
create column family SimpleProcessEventTimeline with comparator = UUIDType;
create column family SimpleProcessEventState with comparator = UUIDType;
create column family SimpleProcessEventCount with default_validation_class=CounterColumnType and comparator = LongType and replicate_on_write=true;

create column family DataEvent with comparator = UTF8Type;
create column family DataEventCategory with default_validation_class=CounterColumnType and comparator = UTF8Type and replicate_on_write=true;
create column family DataEventTimeline with comparator = UUIDType;
create column family DataEventCount with default_validation_class=CounterColumnType and comparator = LongType and replicate_on_write=true;

create column family KpiEvent with comparator = UTF8Type;
create column family KpiEventCategory with default_validation_class=CounterColumnType and comparator = UTF8Type and replicate_on_write=true;
create column family KpiEventTimeline with comparator = UUIDType;
create column family KpiEventCount with default_validation_class=CounterColumnType and comparator = LongType and replicate_on_write=true;
create column family KpiEventSum with comparator = LongType;
